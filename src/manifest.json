{
    "manifest_version": 2,
    "name": "Upload to Danbooru",
    "description": "Add a page action and a context menu option (for images) to upload to Danbooru.",
    "version": "2.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "19": "icons/icon19.png",
            "32": "icons/icon32.png",
            "38": "icons/icon38.png"
        },
        "default_title": "Upload to Danbooru",
        "show_matches": [
            "https://twitter.com/*/status/*",

            "https://www.pixiv.net/artworks/*",
            "https://www.pixiv.net/en/artworks/*",
            "https://sketch.pixiv.net/items/*",
            "https://*.fanbox.cc/posts/*",

            "https://skeb.jp/@*/works/*",

            "https://seiga.nicovideo.jp/seiga/im*",
            "https://seiga.nicovideo.jp/watch/mg*",

            "https://*.deviantart.com/art/*",
            "https://www.deviantart.com/*/art/*",
            "https://sta.sh/*",

            "https://nijie.info/view.php?*id=*",
            "https://nijie.info/view_popup.php?*id=*",
            "https://sp.nijie.info/view.php?*id=*",
            "https://sp.nijie.info/view_popup.php?*id=*",

            "https://pawoo.net/@*/*",
            "https://pawoo.net/web/statuses/*",

            "https://m.weibo.cn/detail/*",
            "https://m.weibo.cn/status/*",

            "https://www.hentai-foundry.com/pictures/user/*",

            "https://www.newgrounds.com/art/view/*",

            "https://www.artstation.com/artwork/*",
            "https://*.artstation.com/projects/*",

            "https://foundation.app/@*/~/*",

            "https://*.lofter.com/post/*",

            "https://www.plurk.com/p/*",

            "https://yande.re/post/show/*",
            "https://konachan.com/post/show/*",

            "https://*.tumblr.com/post/*"
        ]
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["contentScripts/common.js"]
        }, {
            "matches": ["https://www.pixiv.net/*"],
            "js": ["contentScripts/pixiv.js"]
        }, {
            "matches": ["https://*.fanbox.cc/*"],
            "js": ["contentScripts/fanbox.js"]
        }, {
            "matches": ["https://*.lofter.com/*"],
            "js": ["contentScripts/lofter.js"]
        }, {
            "matches": ["https://nijie.info/*"],
            "js": ["contentScripts/nijie.js"]
        }, {
            "matches": ["https://sp.nijie.info/*"],
            "js": ["contentScripts/nijieSP.js"]
        }, {
            "matches": ["https://seiga.nicovideo.jp/*"],
            "js": ["contentScripts/nicoSeiga.js"]
        }, {
            "matches": ["https://skeb.jp/*"],
            "js": ["contentScripts/skeb.js"]
        }, {
            "matches": ["https://pawoo.net/*"],
            "js": ["contentScripts/pawoo.js"]
        }, {
            "matches": ["https://twitter.com/*"],
            "js": ["contentScripts/twitter.js"]
        }
    ],
    "web_accessible_resources": ["batchDetectors.js"],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "upload-to-danbooru@zipfiled.info",
            "strict_min_version": "79.0"
        }
    }
}
